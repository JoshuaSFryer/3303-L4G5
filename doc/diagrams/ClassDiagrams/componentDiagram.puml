@startuml

skinparam linetype polyline

component GUI

together {

  package "FloorSystem"{
  component FloorSystem as fl
    () "8002" as PFl
    PFl - fl
  }

  package "ElevatorSystem" {
  component ElevatorSystem as el
    () "8000" as PEl
    PEl - el
  }

}

together {

package "Simulator"{
  () "8003" as PSi
  component Simulator as sim
  sim - PSi
}

package "Scheduler"{
  component SchedulerSystem
  () "8001" as PSc
  SchedulerSystem - PSc
}


}



package "RabbitMQ"{
  queue "ElevatorQueue"
  queue "FloorQueue"
  queue "GUIQueue"

  FloorQueue -[hidden]> ElevatorQueue

}

PSc <-- el
PSc <-- fl
SchedulerSystem --> PEl
SchedulerSystem --> PFl
fl -> PSi
sim --> PFl
sim --> PEl
el -> PSi

el --> GUIQueue: pub
el <-- ElevatorQueue: sub
fl --> GUIQueue : pub
fl <-- FloorQueue : sub
GUIQueue --> GUI : sub
FloorQueue <-- GUI : pub
ElevatorQueue <-- GUI: pub



@enduml
